{
    "name": "chat-ts",
    "version": "1.0.0",
    "description": "",
    "main": "./dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node src/app.ts --ignore '*.test.ts'",
        "prettier": "prettier --check \"src/**/*.ts\"",
        "prettier:fix": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "prettier:fix:js": "prettier --config .prettierrc 'public/**/*.js' --write",
        "prettier:fix:html": "prettier --config .prettierrc 'public/**/*.html' --write",
        "prettier:watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.13",
        "@types/pg": "^8.6.5",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "body-parser": "^1.20.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "pg": "^8.7.3",
        "ts-md5": "^1.3.1",
        "uuid": "^9.0.0",
        "uuidv4": "^6.2.13"
    }
}
